        <attr name="check_fon_connection_on_stand_by" format="boolean" />
        <attr name="check_fon_connection_in_background" format="boolean" />
        <attr name="check_fon_connection_minutes_interval" format="integer" />
        <!-- assets cross app -->
        <attr name="drawable_logo_header" format="reference" />
        <attr name="color_bg_header_bar" format="color|reference" />
        
        <attr name="color_title_bar_background" format="color|reference" />
        <attr name="color_title_bar_font" format="color|reference" />
        
        <attr name="color_font_content" format="color|reference" />
        

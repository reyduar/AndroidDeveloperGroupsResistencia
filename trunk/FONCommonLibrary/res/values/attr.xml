        <attr name="drawable_background" format="reference" />
        <attr name="drawable_logo_banner" format="reference" />
        <attr name="drawable_ic_account" format="reference" />
        <attr name="drawable_ic_help" format="reference" />
        
        <!-- assets help -->
        <attr name="help_list_selector" format="reference" />
        <attr name="drawable_arrow" format="reference" />
        <attr name="color_divider" format="color|reference" />
        <attr name="color_font_link" format="color|reference" />
        

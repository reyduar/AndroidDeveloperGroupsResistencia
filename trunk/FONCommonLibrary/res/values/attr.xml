        <attr name="drawable_background_dialog_header" format="reference" />
        <attr name="drawable_background_dialog_body" format="reference" />
        <attr name="color_dialog_title_font" format="color|reference" />
        
        <!-- assets notification -->
        <attr name="drawable_ic_notification_clear" format="reference" />
        
        <!-- assets web view (help and about) -->
        <attr name="colo_bg_web_view" format="color|reference" />
        
        <!-- assets menu -->
        <attr name="drawable_ic_menu_quit" format="reference" />
        
